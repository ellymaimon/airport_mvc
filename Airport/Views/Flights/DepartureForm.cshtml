@{
ViewData["Title"] = "Add a Flight";
}


    <form action='/flights/create' method='post'>
    
    <h1>Add a Flight to your Route</h1>
    
    <div class='form-group'>
        <label for='arrivalCity'><h4>Where To?</h4></label>
        <select name='arrivalCity' class='form-control' required>
        @foreach (var city in Model)
        {
          <option value="@city.Id">@city.Name</option>
        }
        </select>
    </div>

    <div class='form-group'>
        <label for='departureCity'><h4>Where From?</h4></label>
        <select name='departureCity' class='form-control' required>
        @foreach (var city in Model)
        {
          <option value="@city.Id">@city.Name</option>
        }
        </select>
    </div>

    <div class='form-group'>
        <label for='departureTime'><h4>Departure Time</h4></label>
        <input name='departureTime' type="time" class='form-control' required>
    </div>

     <div class='form-group'>
        <label for='arrivalTime'><h4>Arrival Time</h4></label>
        <input name='arrivalTime' type="time" class='form-control' required>
    </div>


    <button type='submit' class='btn btn-lg btn-default'>Create Departure Flight</button>
    </form>


